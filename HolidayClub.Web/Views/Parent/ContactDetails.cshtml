@using HolidayClub.Web.Enums;

@model HolidayClub.Web.Models.ContactDetailsViewModel

@{
    ViewData["Title"] = "ContactDetails";
}

<div id="contact-details-page">
    <h1>Contact Details</h1>

    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="ContactDetails">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Title" class="control-label"></label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Forename" class="control-label"></label>
                    <input asp-for="Forename" class="form-control" />
                    <span asp-validation-for="Forename" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Surname" class="control-label"></label>
                    <input asp-for="Surname" class="form-control" />
                    <span asp-validation-for="Surname" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="RelationToChild" class="control-label"></label>
                    <input asp-for="RelationToChild" class="form-control" />
                    <span asp-validation-for="RelationToChild" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Address" class="control-label"></label>
                    <textarea asp-for="Address" class="form-control"></textarea>
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Postcode" class="control-label"></label>
                    <input asp-for="Postcode" class="form-control" />
                    <span asp-validation-for="Postcode" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TelephoneNumber1" class="control-label"></label>
                    <input asp-for="TelephoneNumber1" class="form-control" />
                    <span asp-validation-for="TelephoneNumber1" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="TelephoneNumber2" class="form-control" />
                    <span asp-validation-for="TelephoneNumber2" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="TelephoneNumber3" class="form-control" />
                    <span asp-validation-for="TelephoneNumber3" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CorrespondencePreference" class="control-label"></label>
                    <select asp-for="CorrespondencePreference" asp-items="Html.GetEnumSelectList<CorrespondencePreference>()" class="form-control"></select>
                    <span asp-validation-for="CorrespondencePreference" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SingleParentStatus" class="control-label"></label>
                    <select asp-for="SingleParentStatus" asp-items="Html.GetEnumSelectList<SingleParentStatus>()" class="form-control"></select>
                    <span asp-validation-for="SingleParentStatus" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="IsToBeKeptInformed" class="control-label"></label>
                    <div>
                        <input type="checkbox" asp-for="IsToBeKeptInformed" />
                    </div>
                    <span asp-validation-for="IsToBeKeptInformed" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">
                        Save
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
